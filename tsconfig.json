{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/app.ts",
    "src/server.ts",
    "src/routes/**/*",
    "src/config/**/*",
    "src/core/**/*",
    "src/middleware/**/*",
    "src/utils/**/*",
    "src/modules/auth/**/*",
    "src/modules/users/**/*",
    "prisma/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "src/app.ts",
    "src/server.ts",
    "src/routes/**/*",
    "src/config/**/*",
    "src/core/**/*",
    "src/middleware/**/*",
    "src/utils/**/*",
    "src/modules/auth/**/*",
    "src/modules/users/**/*",
    "prisma/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
